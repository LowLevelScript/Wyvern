root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = tab

[Makefile]
indent_style = tab

[*.{c,h,cpp,hpp}]
indent_size = 2
indent_style = space

[*.{js,ts,mjs}]
indent_size = 4
block_comment_start = /*
block_comment = *
block_comment_end = */

[*.{yml,yaml}]
indent_size = 2
indent_style = space

[*.{md,rmd,mkd,mkdn,mdwn,mdown,markdown,litcoffee}]
tab_width = 4
trim_trailing_whitespace = false

[*.{ps1}]
max_line_length = 115
indent_size = 4
indent_style = space
